<h1>All Recipes</h1>
<hr/>

<% @Recipes.each do |r| %>
<div class="row">
  <div class="col-md-2">
    <section class="chef_info center">
        <%= gravatar_for r.chef, size: 100 %>
        <p>
           <%= r.chef.chefname %>
        </p>
    </section>
  </div>
  <div class="col-lg-8 well">
    <h4><%= link_to r.name, recipe_path(r)  %></h4>
    <p><%= r.summary %></p>  
    <p>
      <span class="quiet"><small><%= time_ago_in_words r.created_at %></small></span>
    </p>
  </div>
</div>
<% end %>